<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ica.han.oose.project.overhoorapp.viewMultipleChoiceQuestion$PlaceholderFragment"
    android:id="@+id/ext">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MultipleChoiceQuestionTextView"
        android:textSize="25dp"
        android:maxHeight="200dp"
        android:textAlignment="center"
        android:textColor="#ff000000"
        android:minHeight="110dp"
        android:autoText="false"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/multiplechoiceQuestionsNumber" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/MultipleChoiceQuestionTextView">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MultiOptie1"
            android:background="@drawable/buttons"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MultiOptie2"
            android:background="@drawable/buttons"
            android:layout_below="@+id/MultiOptie1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MultiOptie3"
            android:background="@drawable/buttons"
            android:layout_below="@+id/MultiOptie2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MultiOptie4"
            android:background="@drawable/buttons"
            android:layout_below="@+id/MultiOptie3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MultiOptie5"
            android:background="@drawable/buttons"
            android:layout_below="@+id/MultiOptie4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NextQuestion"
            android:background="@drawable/buttons"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/MultiOptie5" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/multiplechoiceQuestionsNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

</RelativeLayout>
