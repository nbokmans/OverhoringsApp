<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
<!--    tools:context="ica.han.oose.project.overhoorapp.viewOpenQuestion$PlaceholderFragment">-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:id="@+id/openQuestionNumber"
            android:textSize="25dp"
            android:maxHeight="200dp"
            android:textAlignment="center"
            android:textColor="#ff000000"
            android:minHeight="140dp"
            android:autoText="false"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/OpenquestionTextView"
            android:textSize="25dp"
            android:maxHeight="200dp"
            android:textColor="#ff000000"
            android:minHeight="150dp"
            android:autoText="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:singleLine="false"
            android:password="false"
            android:gravity="center" />

        <EditText
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:id="@+id/OpenQuestionAnswer"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxWidth="400dp"
            android:minWidth="400dp"
            android:editable="true"
            android:enabled="true"
            android:minHeight="50dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:id="@+id/OpenQuestionShowCorrectAnswer"
            android:layout_above="@+id/OpenQuestionSendAnswer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stuur antwoord"
                android:id="@+id/OpenQuestionSendAnswer"
                android:onClick="onClick"
                android:background="@drawable/buttons"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"></Button>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
