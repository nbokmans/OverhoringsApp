<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="@+id/fragment_login"
    tools:context="ica.han.oose.project.overhoorapp.Login.LoginActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="2dp"
        android:paddingBottom="@dimen/activity_vertical_margin">
    </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/textEmailAddress"
                android:layout_above="@+id/textPassword"
                android:layout_alignLeft="@+id/textPassword"
                android:layout_alignStart="@+id/textPassword" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/textPassword"
                android:layout_above="@+id/linearLayout"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/button12"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/textPassword"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:onClick="loginClick"
                android:background="@drawable/buttons"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registreren"
                android:id="@+id/button2"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/textPassword"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttons"
                android:onClick="registerClick" />

        </LinearLayout>
</RelativeLayout>
